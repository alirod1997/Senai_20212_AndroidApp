<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroAtletaActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textViewNomeAtleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNomeAtleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewIdadeAtleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/idade"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextIdadeAtleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonDefinirIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abreActivityIdade"
            android:text="@string/DefinirIdade" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>